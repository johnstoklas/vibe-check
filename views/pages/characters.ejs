<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Characters</title>
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <style>
    body {
      background-image: url('/images/pixel_art_living_room.jpg');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      font-family: 'Press Start 2P', sans-serif;
      color: white;
      margin: 0;
      padding: 0;
    }

    /* Header Navigation */
    #header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 20px;
      background: rgba(0, 0, 0, 0.7);
    }

    .nav-link, #home-button {
      background: white;
      border: 3px solid black;
      padding: 8px 12px;
      text-decoration: none;
      color: black;
      font-size: 12px;
      margin: 0 5px;
      transition: transform 0.2s;
    }

    .nav-link:hover, #home-button:hover {
      transform: scale(1.05);
      background: lightyellow;
    }

    /* Title and Progress */
    #character-title-container {
      text-align: center;
      margin-top: 30px;
    }

    #character-title-container h1 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    #progress-bar-container {
      width: 300px;
      background: lightgray;
      margin: 10px auto;
      height: 20px;
      border-radius: 10px;
      overflow: hidden;
      border: 2px solid black;
    }

    #character-progress-text {
      margin-top: 5px;
      font-size: 14px;
    }

    /* Character Grid */
    #character-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin: 30px 20px;
      gap: 20px;
    }

    .character-card {
      width: 100px;
      height: 100px;
      background: rgba(255, 255, 255, 0.8);
      border: 3px solid black;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
    }

    .character-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
    }

    .locked {
      background: rgba(0, 0, 0, 0.7);
    }

    .lock-image {
      width: 50px;
      height: 50px;
    }

    /* Back Button */
    #back-button-container {
      text-align: center;
      margin-bottom: 30px;
    }

    .back-button {
      background: red;
      color: white;
      padding: 10px 20px;
      border: 2px solid black;
      text-decoration: none;
      font-size: 14px;
      transition: transform 0.2s;
    }

    .back-button:hover {
      transform: scale(1.05);
    }
  </style>
</head>

<body>

  <!-- Top Navigation -->
  <div id="header-container">
    <a href="/" id="home-button">üè†</a>
    <div>
      <a href="/characters" class="nav-link">Characters</a>
      <a href="/leaderboard" class="nav-link">Leaderboard</a>
      <a href="/account" class="nav-link">Account</a>
    </div>
  </div>

  <!-- Title and Progress -->
  <div id="character-title-container">
    <h1>CHARACTERS</h1>
    <div id="progress-bar-container">
      <div id="progress-bar-fill" style="width: <%= Math.floor((unlockedCount / totalCount) * 100) %>%; height: 100%; background: lightblue; transition: width 0.4s ease;"></div>
    </div>
    <div id="character-progress-text">
      <%= unlockedCount %> / <%= totalCount %>
    </div>
  </div>

  <!-- Character Grid (Pure Collage) -->
  <div id="character-grid">
    <% characters.forEach(character => { %>
      <% if (character.unlocked) { %>
        <div class="character-card">
          <img src="<%= character.image %>" alt="Character" class="character-image">
        </div>
      <% } else { %>
        <div class="character-card locked">
          <img src="/images/lock_icon.png" alt="Locked" class="lock-image">
        </div>
      <% } %>
    <% }); %>
  </div>

  <!-- Back Button -->
  <div id="back-button-container">
    <a href="/" class="back-button">BACK</a>
  </div>

</body>
</html>
